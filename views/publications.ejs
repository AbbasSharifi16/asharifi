            </div>
            
            <div class="year-filter">
                <select id="year-filter">
                    <option value="">All Years</option>
                    <% 
                    // Get unique years from publications and sort descending
                    const years = publications && publications.length > 0 
                        ? [...new Set(publications.map(p => p.year).filter(y => y > 0))].sort((a, b) => b - a)
                        : [2025, 2024, 2023, 2022, 2021, 2020, 2019, 2018, 2017];
                    
                    years.forEach(year => { %>
                        <option value="<%= year %>"><%= year %></option>
                    <% }); %>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- Recent & Featured Publications -->
<section class="featured-publications">
    <div class="container">
        <h2 class="section-title">Featured Publications</h2>
        
        <div class="featured-grid">
            <% 
            // Select featured publications automatically
            if (publications && publications.length > 0) {
                // Latest: Most recent publication
                const latest = publications.reduce((prev, current) => 
                    (current.year > prev.year) ? current : prev
                );
                
                // High Impact: Most cited publication
                const highImpact = publications.reduce((prev, current) => 
                    (current.citedBy > prev.citedBy) ? current : prev
                );
                
                // Collaboration: Publication with most authors
                const collaboration = publications.reduce((prev, current) => {
                    const prevAuthors = (prev.authors.match(/,/g) || []).length + 1;
                    const currentAuthors = (current.authors.match(/,/g) || []).length + 1;
                    return (currentAuthors > prevAuthors) ? current : prev;
                });
            %>
            
            <!-- Latest Publication -->
            <div class="featured-publication">
                <div class="featured-header">
                    <span class="publication-type latest">Latest</span>
                    <span class="publication-year"><%= latest.year %></span>
                </div>
                <h3><a href="<%= latest.link %>" target="_blank" rel="noopener" style="color: inherit;"><%= latest.title %></a></h3>
                <p class="authors"><%= latest.authors %></p>
                <p class="journal"><%= latest.venue %></p>
                <div class="publication-metrics">
                    <span class="metric"><i class="fas fa-calendar"></i> <%= latest.year %></span>
                    <% if (latest.citedBy > 0) { %>
                        <span class="metric"><i class="fas fa-quote-right"></i> <%= latest.citedBy %> Citations</span>
                    <% } %>
                    <span class="metric"><a href="<%= latest.link %>" target="_blank" rel="noopener" style="color: inherit;"><i class="fas fa-external-link-alt"></i> View</a></span>
                </div>
            </div>
            
            <!-- High Impact Publication -->
            <div class="featured-publication">
                <div class="featured-header">
                    <span class="publication-type high-impact">High Impact</span>
                    <span class="publication-year"><%= highImpact.year %></span>
                </div>
                <h3><a href="<%= highImpact.link %>" target="_blank" rel="noopener" style="color: inherit;"><%= highImpact.title %></a></h3>
                <p class="authors"><%= highImpact.authors %></p>
                <p class="journal"><%= highImpact.venue %></p>
                <div class="publication-metrics">
                    <span class="metric"><i class="fas fa-calendar"></i> <%= highImpact.year %></span>
                    <span class="metric"><i class="fas fa-quote-right"></i> <%= highImpact.citedBy %> Citations</span>
                    <span class="metric"><a href="<%= highImpact.link %>" target="_blank" rel="noopener" style="color: inherit;"><i class="fas fa-external-link-alt"></i> View</a></span>
                </div>
            </div>
            
            <!-- Collaboration Publication -->
            <div class="featured-publication">
                <div class="featured-header">
                    <span class="publication-type collaboration">Collaboration</span>
                    <span class="publication-year"><%= collaboration.year %></span>
                </div>
                <h3><a href="<%= collaboration.link %>" target="_blank" rel="noopener" style="color: inherit;"><%= collaboration.title %></a></h3>
                <p class="authors"><%= collaboration.authors %></p>
                <p class="journal"><%= collaboration.venue %></p>
                <div class="publication-metrics">
                    <span class="metric"><i class="fas fa-users"></i> <%= (collaboration.authors.match(/,/g) || []).length + 1 %> Authors</span>
                    <% if (collaboration.citedBy > 0) { %>
                        <span class="metric"><i class="fas fa-quote-right"></i> <%= collaboration.citedBy %> Citations</span>
                    <% } %>
                    <span class="metric"><a href="<%= collaboration.link %>" target="_blank" rel="noopener" style="color: inherit;"><i class="fas fa-external-link-alt"></i> View</a></span>
                </div>
            </div>
            
            <% } else { %>
                <div style="text-align: center; padding: var(--space-16); color: var(--text-secondary); grid-column: 1 / -1;">
                    <i class="fas fa-spinner fa-spin" style="font-size: 2rem; margin-bottom: var(--space-4);"></i>
                    <p>Loading featured publications...</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

