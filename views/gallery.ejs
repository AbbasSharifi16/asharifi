    <section class="hero" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 249, 250, 0.95) 100%); border-bottom: 3px solid var(--primary);">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
                <div>
                    <h1 style="color: var(--primary); font-size: 3rem; margin-bottom: 1rem;">Gallery</h1>
                    <p class="lead" style="color: var(--text); max-width: 800px;">
                        A collection of photos from research, conferences, and academic activities
                    </p>
                </div>

            </div>
        </div>
    </section>

    <section class="content-section">
        <div class="container">
            <% if (images && images.length > 0) { %>
                <div class="gallery-info">
                    <p style="color: var(--text-light); margin-bottom: 2rem;">
                        <i class="fas fa-images"></i> <%= images.length %> <%= images.length === 1 ? 'photo' : 'photos' %>
                    </p>
                </div>
                <div class="gallery-grid" data-columns="3">
                    <% images.forEach((image, index) => { %>
                        <div class="gallery-item" data-index="<%= index %>">
                            <img src="<%= image %>" alt="Gallery image <%= index + 1 %>" loading="lazy">
                            <div class="gallery-item-overlay">
                                <button class="expand-btn" title="View full size">
                                    <i class="fas fa-expand"></i>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="gallery-placeholder">
                    <i class="fas fa-images" style="font-size: 4rem; color: var(--primary-light); margin-bottom: 1rem;"></i>
                    <p style="color: var(--text-light); font-size: 1.2rem; margin-bottom: 0.5rem;">No photos yet</p>
                    <p style="color: var(--text-light); font-size: 0.95rem;">Add images to <code>public/img/gallery/</code> folder</p>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Lightbox Modal -->
    <div id="lightbox" class="lightbox">
        <button class="lightbox-close" title="Close (Esc)">
            <i class="fas fa-times"></i>
        </button>
        <button class="lightbox-prev" title="Previous (←)">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button class="lightbox-next" title="Next (→)">
            <i class="fas fa-chevron-right"></i>
        </button>
        <div class="lightbox-content">
            <img id="lightbox-img" src="" alt="">
            <div class="lightbox-counter"></div>
        </div>
    </div>

